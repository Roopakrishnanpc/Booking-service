<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <!-- ========================================================= -->
    <!-- Properties -->
    <!-- ========================================================= -->

    <property name="LOG_PATH" value="logs"/>
    <property name="APP_NAME" value="booking-service"/>

    <!-- If using Zipkin / Micrometer Tracing,
         traceId and spanId will be auto-populated.
         For now they will remain empty (-) -->

    <!-- ========================================================= -->
    <!-- Console Appender -->
    <!-- ========================================================= -->

    <appender name="CONSOLE"
              class="ch.qos.logback.core.ConsoleAppender">

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS}
                [%thread]
                %-5level
                [trace=%X{traceId:-}, span=%X{spanId:-}]
                %logger{36}
                - %msg%n
            </pattern>
        </encoder>
    </appender>


    <!-- ========================================================= -->
    <!-- Rolling File Appender -->
    <!-- ========================================================= -->

    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${LOG_PATH}/${APP_NAME}.log</file>

        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">

            <!-- Daily rollover + size based -->

            <fileNamePattern>
                ${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>

            <!-- Keep 30 days logs -->
            <maxHistory>30</maxHistory>

            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">

                <maxFileSize>10MB</maxFileSize>

            </timeBasedFileNamingAndTriggeringPolicy>

        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS}
                [%thread]
                %-5level
                [trace=%X{traceId:-}, span=%X{spanId:-}]
                %logger{36}
                - %msg%n
            </pattern>
        </encoder>

    </appender>


    <!-- ========================================================= -->
    <!-- Logging Levels -->
    <!-- ========================================================= -->

    <!-- Spring Framework logs -->
    <logger name="org.springframework" level="INFO"/>

    <!-- Hibernate SQL logs -->
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql" level="WARN"/>

    <!-- Your Application logs -->
    <logger name="com.movieticket.booking" level="DEBUG"/>


    <!-- ========================================================= -->
    <!-- Root Logger -->
    <!-- ========================================================= -->

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>